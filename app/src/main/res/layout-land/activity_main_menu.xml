<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="2">

    <Button
        android:id="@+id/wildBattleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wild_battle"
        android:textSize="18sp"
        android:textColor="@color/red"
        android:fontFamily="@font/opensansbold"
        android:backgroundTint="@color/transparent"
        android:layout_marginTop="150dp"
        app:strokeColor="@color/red"
        app:strokeWidth="2dp"
        app:layout_constraintBottom_toTopOf="@id/trainerBattleBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/trainerBattleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trainer_battle"
        android:textSize="18sp"
        android:textColor="@color/red"
        android:fontFamily="@font/opensansbold"
        android:backgroundTint="@color/transparent"
        app:strokeColor="@color/red"
        app:strokeWidth="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wildBattleBtn"
        />

    <Button
        android:id="@+id/pokeCenterBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pokemon_center"
        android:textSize="18sp"
        android:textColor="@color/red"
        android:fontFamily="@font/opensansbold"
        android:backgroundTint="@color/transparent"
        app:strokeColor="@color/red"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@+id/trainerBattleBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <Button
        android:id="@+id/changeTeamBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_team"
        android:textSize="18sp"
        android:textColor="@color/red"
        android:fontFamily="@font/opensansbold"
        android:backgroundTint="@color/transparent"
        app:strokeColor="@color/red"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@+id/pokeCenterBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/main_img_land"
        />

</androidx.constraintlayout.widget.ConstraintLayout>